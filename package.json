{
  "name": "site-stitcher",
  "version": "1.0.0",
  "description": "The tool I use to build my website, picostitch.com",
  "main": "index.js",
  "scripts": {
    "ci:test": "npm run typecheck && npm run test",
    "test": "mocha -r esm src/{,*/}*spec.js",
    "start": "npm run build && npm run serve",
    "serve": "http-server _output -d -i --port 5000",
    "dev:start": "npm run build; npm run serve & ./build-on-file-change.sh",
    "dev:test": "npm run test -- --watch --bail",
    "postdev:start": "pkill -f http-server",
    "build": "mkdir -p _output; node -r esm src/index.js && npm run build:assets",
    "build:assets": "cp CNAME _output && npm run build:css && npm run build:favicon && npm run build:images:png && npm run build:images:jpg && npm run build:images:gif && npm run build:images:gif-tidbits && npm run build:images:jpg-tidbits",
    "build:css": "cp src/templates/*.css _output/ && cp src/templates/tidbit/*.css _output/tidbits/",
    "build:favicon": "cp src/templates/*.ico _output/",
    "build:images:jpg": "cd content/blog-posts; find . -name '*.jpg' -exec cp -v '{}' ../../_output/blog/'{}' \\;",
    "build:images:png": "cd content/blog-posts; find . -name '*.png' -exec cp -v '{}' ../../_output/blog/'{}' \\;",
    "build:images:gif": "cd content/blog-posts; find . -name '*.gif' -exec cp -v '{}' ../../_output/blog/'{}' \\;",
    "build:images:gif-tidbits": "cd content/tidbit; find . -name '*.gif' -exec cp -v '{}' ../../_output/tidbits/'{}' \\;",
    "build:images:jpg-tidbits": "cd content/tidbit; find . -name '*.jpeg' -exec cp -v '{}' ../../_output/tidbits/'{}' \\;",
    "typecheck": "tsc",
    "dev:typecheck": "npm run typecheck -- --watch",
    "new-post": "clear; node -r esm src/new-post.js"
  },
  "keywords": [
    "static site generator",
    "website"
  ],
  "author": "Wolfram Kriesing",
  "license": "MIT",
  "devDependencies": {
    "@types/marked": "^0.7.4",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "esm": "^3.2.25",
    "hamjest": "^3.3.1",
    "http-server": "^0.12.1",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "marked": "^1.0.0",
    "tundrajs": "^1.0.0",
    "url-slug": "^2.3.1"
  }
}
